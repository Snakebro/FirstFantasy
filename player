          def heal(self, potion):
                    if self.current_health < self.max_health:
                              self.current_health += potion
                              if self.current_health > self.max_health:
                                        self.current_health = self.max_health
                              message = 'I have healed myself for ' + potion + ' HP'
                              return message
                              
